[Unit]
Description=Medley
After=network.target

[Service]
Type=notify
NotifyAccess=all
Environment=MEDLEY_notify_systemd=True
Environment=MEDLEY_database_dir={{ medley_root }}/db
WorkingDirectory={{ medley_root }}
ExecStart={{ medley_root }}/medley
TimeoutStartSec=180
Restart=on-failure

[Install]
WantedBy=default.target

